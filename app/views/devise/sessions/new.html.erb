<div class="row">
  <div class="col-md-4 offset-md-4 mt-5">
    <div class="card shadow p-3 mt-2 mb-2 bg-white rounded">
      <div class="text-center">
        <div class="mb-3 d-flex justify-content-center">
          <%= image_tag 'goma.jpg', style: "width:100px; height:100px;", class: "rounded-circle" %>
        </div>
        <span class="mozi font-english">Lon in</span>
        <div class="card-body">
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa-solid fa-envelope"></i> </span>
                </div>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"メールアドレス" %>
              </div> <!-- form-group// -->
            </div>    

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <%= f.password_field :password, autofocus: true, class: "form-control", placeholder:"パスワード6文字以上" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class:"btn btn-outline-info" %>
            </div>
          <% end %>

          <div class="mt-2">
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>