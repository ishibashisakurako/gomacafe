
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="text-center">
      <p class="mt-3">gomacafeにようこそ！<br>
      一緒にお菓子作りを楽しみましょう！</p>




      <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="d-flex justify-content-center mt-3">
          <%= image_tag 'goma.jpg', style: "width:100px; height:100px;", class: "rounded-circle" %>
        </div>

      <div class="card-body">



<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
      </div>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"ユーザー名" %>
    </div> <!-- form-group// -->
  </div>



  <div class="form-group">
	<div class="input-group">
		<div class="input-group-prepend">
		  <span class="input-group-text"> <i class="fa-solid fa-envelope"></i> </span>
		</div>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"メールアドレス" %>
	</div> <!-- form-group// -->
  </div>



<div class="form-group">
  <div class="input-group">
		<div class="input-group-prepend">
		  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
      <%= f.password_field :password, autofocus: true, class: "form-control", placeholder:"パスワード6文字以上" %>
	</div>
</div>


<div class="form-group">
  <div class="input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
      <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder:"パスワード確認用" %>
	</div>
</div>



  <div class="actions">
    <%= f.submit "登録", class:"btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
</div>
</div>
</div>