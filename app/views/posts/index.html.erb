
<div class="container">
  <h1>みんなの投稿一覧</h1>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <figure>
          <%= image_tag post.get_image, style: "width:100%;" %>
          <figcaption>
            <%= link_to post.title, "/posts/#{post.id}" %>
          </figcaption>
        </figure>
      </div>
    <% end %>
  </div>
</div>
    <table class="table">
      <% @posts.each do |post| %>
        <tr>
          <td>
            <span>
              <%= link_to post.title, "/posts/#{post.id}" %>
            </span>
          </td>


          <td>
            <%= image_tag post.get_image, style: "width:200px; height:200px;" %>
          </td>

          <td>
            <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
          </td>
        </tr>
      <% end %>
    </table>

<%= paginate @posts %>

  </div>
</div>