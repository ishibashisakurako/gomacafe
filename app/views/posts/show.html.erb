
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<hr>
<div class="text-center">
  <h3><b><%= @post.title %></b></h3>
</div>

<hr>

<div class="row">


  <div class="col-md-4">
    <% if @post.image.attached? %>
      <%= image_tag @post.image, style: "width:300px; height:300px;" %>
    <% else %>
      <%= image_tag 'noimage', style: "width:300px; height:300px;" %>
    <% end %>
  </div>



  <div class="col-md-8">
    <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
    <%= link_to @user.name, user_path(@user.id) %>さんのレシピ
    <% if @post.genre %>
      <%= @post.genre.name %>
    <% end %>
    <hr>
    <h5><b><i class="fa-solid fa-check-double"></i> レシピ概要</b></h5>
    <hr>
    <%= simple_format @post.introduction %>
    <hr>
    
    <div>
    <% if @post.favorited_by?(current_user) %>
      <div class="d-flex">
        <div class="mr-1">
          <%= link_to post_favorites_path(@post), method: :delete do %>
            <i class="fa-solid fa-heart favorite-btn" style="font-size:32px;"></i>
          <% end %>
        </div>
        <div class="d-flex align-items-end">
          <span><%= @post.favorites.count %>人がお気に入り登録しているレシピです！</span>
        </div>
      </div>
      <% else %>
      <p>
        <%= link_to post_favorites_path(@post), method: :post do %>
          <h3><i class="fa-regular fa-heart nofavorite-btn"></i></h3>
        <% end %>
          <%= @post.favorites.count %>件 素敵！と思ったらお気に入りに追加しましょう！
      </p>
  <% end %>
</div>

  </div>
</div>

<hr>
<div class="row">
  <div class="col-md-4">
    <h5><b><i class="fa-solid fa-seedling"></i> 材料</h5></b> <%= @post.amount %>
    <hr>
    <%= simple_format @post.material %>
  </div>
  <div class="col-md-8">
    <h5><b><i class="fa-solid fa-mitten"></i> 作り方</b></h5>
    <hr>
    <%= simple_format @post.recipe %>
    <hr>
    <h5><b><i class="fa-solid fa-bullhorn"></i> ポイント</b></h5>
    <hr>
    <%= simple_format @post.point %>
  </div>
</div>

<% if @user == current_user %>
  <div class="d-flex justify-content-end">
    <%= link_to "編集", edit_post_path(@post), class: "btn btn-success mr-2" %>
    <%= link_to "削除", post_path(@post.id), class: "btn btn-danger", method: :delete, data: {confirm: "投稿を削除しますか？"} %>
  </div>
<% end %>




<div>
  <h5><b>コメント </b><%= @post.post_comments.count %>件</h5>
  <% @post.post_comments.each do |post_comment| %>
    <%= image_tag post_comment.user.get_profile_image(70,70), class: "rounded-circle" %>
    <%= post_comment.user.name %>さん
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, data: {confirm: "コメントを削除しますか？"} %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "思いやりのあるコメントを心掛けましょう" , size: "80×20" %>
    <%= f.submit "送信" , class: "btn btn-secondary" %>
  <% end %>
</div>


