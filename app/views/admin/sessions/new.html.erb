<div class="row">
  <div class="col-md-4 offset-md-4 mt-5">

    <div class="card shadow p-3 mt-2 mb-2 bg-white rounded">
      <div class="text-center">
        <div class="mb-3 d-flex justify-content-center">
          <%= image_tag 'goma.jpg', style: "width:100px; height:100px;", class: "rounded-circle" %>
        </div>

        <span class="playwrite-in-title"><h5>Admin Lon in</h5></span>

        <div class="card-body">

          <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa-solid fa-envelope"></i> </span>
                </div>
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"メールアドレス" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"パスワード" %>
              </div>
            </div>

            <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




<%= render "admin/shared/links" %>
