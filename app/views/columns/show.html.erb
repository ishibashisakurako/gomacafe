<hr>
<h4 class="text-center"><b>コラム：<%= @column.title %></b></h4>
<hr>
<%== @column.body %>

<style>
  figcaption {
    display: none!important;
  }
  figure img {
    max-width: 50%;
    object-fit: contain;
  }
</style>

<% if @column.user == current_user %>
<%= link_to "編集", edit_column_path(@column), class: "btn btn-outline-success" %>
<% end %>
<hr>
<h4 class="text-center"><b>このコラムを書いた人</b></h4>
<%= image_tag @column.user.get_profile_image(100,100), class: "rounded-circle" %>
<%= link_to @column.user.name, user_path(@column.user.id) %>
<%= @column.user.introduction %>
<hr>