
  <div class="row">
    <div class="col-md-8 offset-md-2">

    <h2>プロフィール編集</h2>
      <%= form_with model: @user do |f| %>

      
        <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholider:"名前" %>


        <label for="inputImage">Prifile Image</label>
      <%= image_tag @user.get_profile_image(100,100) %>
  

  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

      <label for="inoutIntroduction">自己紹介</label>
      <%#= f.label :introduction, "" %>
      <%= f.text_area :introduction, rows: 5 %>

      <%= f.submit "変更を保存" , class: "btn btn-success" %>

      <%= link_to "退会", user_path(@user), method: :delete, class: "btn btn-danger", data: {confirm: "退会しますか？"} %>

      <% end %>
  
    
  </div>
</div>