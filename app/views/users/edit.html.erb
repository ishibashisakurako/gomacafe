<div class="row">
  <div class="col-md-6 offset-md-3">
    <hr>
    <%= render 'layouts/error_messages', model: @user %>

    <div class="text-center font-english heading">
      <i class="fa-solid fa-user pale-blue"></i> Edit Profile
    </div>
    <hr>
    <%= form_with model: @user do |f| %>
      <div class="card shadow">
        <div class="card-body text-center">   
          <p><%= image_tag @user.get_profile_image(100,100) %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          <label for="inputName">
            名前
          </label>
          <%= f.text_field :name, class: "form-control mb-2", autofocus: true, id:"inputName", placeholider:"名前" %>
          <label for="inoutIntroduction">
            自己紹介
          </label>
          <%= f.text_area :introduction, rows: 5, class: "form-control mb-2", placeholder: "簡単な自己紹介を30文字程度で書きましょう！" %></p>
          <%= f.button class: "btn btn-outline-success" do %>
            <i class="fa-solid fa-check"></i>
          <% end %>
          <%= link_to user_path(@user), method: :delete, class: "btn btn-outline-danger", data: {confirm: "退会しますか？"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
       </div>
      </div>       
    <% end %>
  </div>
</div>