<hr>
<div class="text-center font-english heading">
  <i class="fa-solid fa-heart favorite-btn"></i> My Favorite Recipes 
</div>
<hr>

 <div class="row">
    <% @favorite_posts.each do |post| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card shadow mb-5">
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_image, style: "width:100%;" %>
          <% end %>
          <div class="card-body">
            <div class="text-center">
              <b><%= post.title %></b>
            </div>
            <div class="mb-1">
              <%= image_tag post.user.get_profile_image(50,50), class: "rounded-circle" %>
              <%= post.user.name %>さん
            </div>

            <div class="text-right">
              <%= link_to post_favorites_path(post), method: :delete, class: "btn btn-outline-danger", data: {confirm: "お気に入りから削除しますか？"} do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
