<hr>
<div class="text-center font-english heading">
  <i class="fa-solid fa-users pale-blue"></i> followings
</div>
<hr>
<div class="row">
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="col-lg-4 col-md-2 col-sm-6">
        <div class="card shadow mb-3" style="height:315px;">
          <div class="card-body">
            <div class="text-center">
              <figure>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.get_profile_image(100,100), class: "rounded-circle" %>
                  <% end %>
                <figcaption>
                  <b><%= user.name %></b>
                  <hr>
                  <%= simple_format user.introduction&.truncate(40) %>
                </figcaption>
                  <%= render "relationships/btn", user: user, options: { class: ""} %>
              <figure>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12 text-center">まだ誰もフォローしていません。
    </div>
  <% end %>
</div>
