<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.get_image, style: "width:200px; height:200px;" %></td>
          <td><%= link_to post.title, "/posts/#{post.id}" %></td>
          <td><%= post.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>